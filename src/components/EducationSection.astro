---
import SectionTitle from './SectionTitle.astro'

const URL_CERTIFICATES = [
  '/image/education/utp_ingles.png',
  '/image/education/utp_algoritmos.png',
  '/image/education/alura_java.png',
  '/image/education/alura_springboot.png',
]
---

<section id='education_section'>
  <SectionTitle>Educaci√≥n & Certificaciones</SectionTitle>
  <article class='grid grid-cols-1 md:grid-cols-2 gap-4'>
    {
      URL_CERTIFICATES.map((e) => (
        <div class='p-8 border dark:border-gray-700 rounded-xl w-fit mx-auto overflow-hidden'>
          <img
            src={e}
            alt={e}
            width='500'
            height='500'
            class='hover:scale-125 transition-transform duration-500 ease-in-out'
          />
        </div>
      ))
    }
  </article>
</section>
