---
interface Props {
  id: number
  title: string
  subtitle: string
  date: string
  description: string
}

const { date, description, subtitle, title, id } = Astro.props
---

<div class='flex gap-8 w-full max-w-5xl dark:text-white'>
  <div class='flex flex-col items-center'>
    <div class='min-h-8 w-8 bg-black dark:bg-white rounded-full'></div>
    <div class='w-1 h-full bg-black dark:bg-white'></div>
  </div>
  <div
    class=`border dark:border-gray-700 rounded-xl px-8 py-4 my-2 opacity-0 delay-[${ id * 50 }ms]`
    data-animation='fade-in'
  >
    <h3 class='text-2xl font-semibold'>{title}</h3>
    <h4 class='text-lg font-semibold'>{subtitle}</h4>
    <p class='text-gray-500'>{date}</p>
    <p class='text-gray-500'>
      {description}
    </p>
  </div>
</div>
